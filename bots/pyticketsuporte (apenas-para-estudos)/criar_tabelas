CREATE TABLE tickets_salvos(
        id_ticket INTEGER PRIMARY KEY AUTOINCREMENT,
        id_user INTEGER NOT NULL,
        nome_user TEXT,
        texto TEXT NOT NULL,
        resposta TEXT,
        nome_admin TEXT,
        data_envio REAL NOT NULL,
        data_respondido REAL,
        status INTEGER NOT NULL);